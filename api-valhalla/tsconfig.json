{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "types": ["node"],
    "lib": ["ES2020"]
  },
  "include": ["src"]
}